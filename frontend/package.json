{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:console": "playwright test tests/e2e/console-errors.spec.ts --project=chromium",
    "test:e2e:perf": "playwright test tests/e2e/performance.spec.ts --project=chromium",
    "test:e2e:a11y": "playwright test tests/e2e/accessibility.spec.ts --project=chromium",
    "test:e2e:visual": "playwright test tests/e2e/visual-regression/ --project=chromium",
    "test:e2e:qa": "playwright test tests/e2e/qa-walkthrough.spec.ts --project=chromium",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@sentry/react": "^10.32.1",
    "@tanstack/react-query": "^5.90.11",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "i18next": "^25.7.2",
    "lightweight-charts": "^5.0.9",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.0",
    "react-is": "^19.2.3",
    "react-router-dom": "^7.10.0",
    "recharts": "^3.5.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^1.2.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^1.2.0"
  }
}
